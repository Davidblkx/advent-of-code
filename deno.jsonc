{
  "compilerOptions": {
    "allowJs": true
  },
  "importMap": "./import_map.json",
  "fmt": {
    "options": {
      "indentWidth": 2,
      "singleQuote": true,
      "useTabs": false,
      "lineWidth": 120,
      "proseWrap": "preserve"
    }
  },
  "tasks": {
    "create": "deno run -A ./aoc.ts c -y 2022 -d",
    "test": "deno run -A ./aoc.ts x -y 2022 -t 'test' -d",
    "run": "deno run -A ./aoc.ts x -y 2022 -d"
  }
}